<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('layouts/head'); -%>
    <title>Examiner | DriveTest</title>
  </head>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>

    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('assets/img/contact-bg.jpg')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="page-heading">
              <h1>Examiner Dashboard</h1>
              <span class="subheading"
                >Fasten your seatbelt and prepare to accelerate towards success
                with every login.</span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
      <!-- Display limited information about Driver -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Driver Information</h5>
          <p class="card-text">
            <strong>Name:</strong> <%= driverDetails.firstName %> <%=
            driverDetails.lastName %>
          </p>
          <p class="card-text">
            <strong>Car Details:</strong> <%= driverDetails.carDetails.make %>
            <%= driverDetails.carDetails.model %>
          </p>
        </div>
      </div>

      <!-- Examiner's comments and pass/fail -->
      <div class="card mt-3">
        <div class="card-body">
          <h5 class="card-title">Examiner's Comments</h5>

          <!-- Form for adding comments and marking pass/fail -->
          <form
            action="/examiner/appointments/<%= driverDetails._id %>"
            method="post"
          >
            <div class="mb-3">
              <label for="comment">Add Comment:</label>
              <textarea
                class="form-control"
                id="comment"
                name="comment"
                rows="3"
              ></textarea>
            </div>

            <div class="mb-3 form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="passFail"
                name="passFail"
              />
              <label class="form-check-label" for="passFail"
                >Mark as Pass</label
              >
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
