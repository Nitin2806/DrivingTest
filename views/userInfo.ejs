<!DOCTYPE html>
<html lang="en">
  <!-- Include necessary head, navbar, and footer content as needed -->
  <%- include('layouts/head'); -%>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>
    <header
      class="masthead"
      style="background-image: url('assets/img/post-bg.jpg')"
    ></header>
    <main class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="my-5">
              <h1>User Information</h1>
              <div id="user-info">
                <!-- Display user information here in view mode -->
                <p>
                  First Name: <span id="firstname"><%= user.firstname %></span>
                </p>
                <p>
                  Last Name: <span id="lastname"><%= user.lastname %></span>
                </p>
                <p>Age: <span id="age"><%= user.Age %></span></p>
                <p>
                  License Number:
                  <span id="licenseNumber"><%= user.LicenseNo %></span>
                </p>
                <h2><b>Car Details</b></h2>
                <p>Make: <span id="make"><%= user.carDetails.make %></span></p>
                <p>
                  Model: <span id="model"><%= user.carDetails.model %></span>
                </p>
                <p>Year: <span id="year"><%= user.carDetails.year %></span></p>
                <p>
                  Plate Number:
                  <span id="plateno"><%= user.carDetails.plateno %></span>
                </p>
              </div>

              <!-- Add an Edit button to toggle between view and edit mode -->
              <button class="btn btn-primary text-uppercase" id="edit-button">
                Edit
              </button>

              <!-- Add a form for editing user information (initially hidden) -->
              <form
                id="edit-form"
                style="display: none"
                action="/edit"
                method="POST"
              >
                <input
                  type="text"
                  name="firstname"
                  id="edit-firstname"
                  value="<%= user.firstname %>"
                  required
                />
                <input
                  type="text"
                  name="lastname"
                  id="edit-lastname"
                  value="<%= user.lastname %>"
                  required
                />
                <input
                  type="number"
                  name="age"
                  id="edit-age"
                  value="<%= user.Age %>"
                  required
                />
                <input
                  type="text"
                  name="licenseNumber"
                  id="edit-licenseNumber"
                  value="<%= user.LicenseNumber %>"
                  required
                />
                <p>Car Details:</p>
                <input
                  type="text"
                  name="make"
                  id="edit-make"
                  value="<%= user.carDetails.make %>"
                  required
                />
                <input
                  type="text"
                  name="model"
                  id="edit-model"
                  value="<%= user.carDetails.model %>"
                  required
                />
                <input
                  type="text"
                  name="year"
                  id="edit-year"
                  value="<%= user.carDetails.year %>"
                  required
                />
                <input
                  type="text"
                  name="plateno"
                  id="edit-plateno"
                  value="<%= user.carDetails.plateno %>"
                  required
                />
                <button type="submit">Save Changes</button>
              </form>

              <!-- Add a link to go back to the previous page (if needed) -->
              <a class="btn btn-primary text-uppercase" href="/g">Go Back</a>
            </div>

            <!-- Footer-->
            <%- include('layouts/footer') -%>

            <!-- JS to toggle between view and edit mode -->
            <script>
              const userInfo = document.getElementById("user-info");
              const editButton = document.getElementById("edit-button");
              const editForm = document.getElementById("edit-form");

              editButton.addEventListener("click", () => {
                if (userInfo.style.display === "none") {
                  // Switch to view mode
                  userInfo.style.display = "block";
                  editForm.style.display = "none";
                  editButton.innerText = "Edit";
                } else {
                  // Switch to edit mode
                  userInfo.style.display = "none";
                  editForm.style.display = "block";
                  editButton.innerText = "Cancel Edit";
                }
              });
            </script>
          </div>
        </div>
      </div>
    </main>
    <!-- JS-->
    <%- include('layouts/scripts') -%>
  </body>
</html>
