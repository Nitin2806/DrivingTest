<!DOCTYPE html>
<html lang="en">
  <!-- Include necessary head, navbar, and footer content as needed -->
  <%- include('layouts/head'); -%>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>
    <header
      class="masthead"
      style="background-image: url('assets/img/post-bg.jpg')"
    ></header>
    <main class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="my-5">
              <h1>User Information</h1>
              <div id="user-info">
                <p>
                  First Name: <span id="firstname"><%= user.firstname %></span>
                </p>
                <p>
                  Last Name: <span id="lastname"><%= user.lastname %></span>
                </p>
                <p>Age: <span id="age"><%= user.Age %></span></p>
                <p>
                  License Number:
                  <span id="licenseNumber"><%= user.licenseNo %></span>
                </p>
                <h2><b>Car Details</b></h2>
                <p>Make: <span id="make"><%= user.carDetails.make %></span></p>
                <p>
                  Model: <span id="model"><%= user.carDetails.model %></span>
                </p>
                <p>Year: <span id="year"><%= user.carDetails.year %></span></p>
                <p>
                  Plate Number:
                  <span id="plateno"><%= user.carDetails.plateNo %></span>
                </p>
              </div>

              <button class="btn btn-primary text-uppercase" id="edit-button">
                Edit
              </button>

              <form
                id="edit-form"
                style="display: none"
                action="/edit"
                method="POST"
              >
                <input
                  type="text"
                  name="firstname"
                  id="edit-firstname"
                  value="<%= user.firstname %>"
                  required
                  disabled
                />
                <input
                  type="text"
                  name="lastname"
                  id="edit-lastname"
                  value="<%= user.lastname %>"
                  required
                  disabled
                />
                <input
                  type="number"
                  name="Age"
                  id="edit-age"
                  value="<%= user.Age %>"
                  required
                  disabled
                />
                <input
                  type="text"
                  name="licenseNo"
                  id="edit-licenseNumber"
                  value="<%= user.LicenseNo %>"
                  required
                  readonly
                />
                <p>Car Details:</p>
                <input
                  type="text"
                  name="make"
                  id="edit-make"
                  value="<%= user.carDetails.make %>"
                  required
                />
                <input
                  type="text"
                  name="model"
                  id="edit-model"
                  value="<%= user.carDetails.model %>"
                  required
                />
                <input
                  type="text"
                  name="year"
                  id="edit-year"
                  value="<%= user.carDetails.year %>"
                  required
                />
                <input
                  type="text"
                  name="plateno"
                  id="edit-plateno"
                  value="<%= user.carDetails.plateno %>"
                  required
                />

                <br />
                <button class="btn btn-primary text-uppercase" type="submit">
                  Save Changes
                </button>
              </form>

              <a class="btn btn-primary text-uppercase" href="/g">Go Back</a>
            </div>

            <!-- Footer-->
          </div>
        </div>
      </div>
    </main>

    <!-- JS-->
    <%- include('./layouts/scripts') -%> <%- include('./layouts/footer') -%>
  </body>
</html>
