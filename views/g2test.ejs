<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/head'); -%>
  <head>
    <title>G2 - DriveTest</title>
  </head>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>

    <!-- Page Header-->
    <header
      class="modifiedMasthead"
      style="background-image: url('assets/img/about-bg.jpg')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="page-heading">
              <h1>G2 Test</h1>
              <span class="subheading">G2 Test Page</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <main class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="my-5">
              <form action="/edit" method="POST">
                <!-- Section for Personal Details -->
                <label for="name">Personal Details</label>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="firstname"
                    name="firstName"
                    type="text"
                    value="<%- userObject.firstName -%>"
                    placeholder="Enter your First Name..."
                    required
                  />
                  <label for="firstname">First Name</label>
                  <div class="invalid-feedback">First name is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="lastname"
                    name="lastName"
                    type="text"
                    value="<%- userObject.lastName -%>"
                    placeholder="Enter your last name..."
                    required
                  />
                  <label for="lastname">Last Name</label>
                  <div class="invalid-feedback">Last name is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="LicenseNo"
                    name="licenceNo"
                    type="text"
                    value="<%- userObject.licenceNo -%>"
                    placeholder="Enter your license number."
                    required
                  />
                  <label for="LicenseNo">Licence Number</label>
                  <div class="invalid-feedback">
                    License number is required.
                  </div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="Age"
                    name="age"
                    type="number"
                    value="<%- userObject.age -%>"
                    placeholder="Enter your age"
                  />
                  <label for="Age">Age</label>
                  <div class="invalid-feedback">Age is required.</div>
                </div>
                <br />

                <!-- Section for Car Details -->
                <label>Car Details</label>

                <div class="form-floating">
                  <input
                    class="form-control"
                    id="make"
                    name="make"
                    type="text"
                    value="<%- userObject.carDetails.make -%>"
                    placeholder="Enter your car make"
                    required
                  />
                  <label for="make">Make</label>
                  <div class="invalid-feedback">Car Make is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="model"
                    name="model"
                    value="<%- userObject.carDetails.model -%>"
                    type="text"
                    placeholder="Enter your car model"
                    required
                  />
                  <label for="model">Model</label>
                  <div class="invalid-feedback">Car Model is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="year"
                    name="year"
                    value="<%- userObject.carDetails.year -%>"
                    type="number"
                    placeholder="Enter your car year"
                    required
                  />
                  <label for="year">Year</label>
                  <div class="invalid-feedback">Car Year is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="plateno"
                    name="plateNo"
                    value="<%- userObject.carDetails.plateNo -%>"
                    type="text"
                    placeholder="Enter your car plate number"
                    required
                  />
                  <label for="plateno">Plate Number</label>
                  <div class="invalid-feedback">Plate Number is required.</div>
                </div>
                <div class="form-floating">
                  <input
                    type="date"
                    name="date"
                    class="form-control"
                    id="bookingAppointmentDate"
                    value="<%- userObject.appointmentDate -%>"
                    onchange="getTimeSlot()"
                  />
                  <label for="bookingAppointmentDate"
                    >Select Appointment Date:</label
                  >
                </div>
                <!-- Display Selected Time Slots -->
                <div class="mt-3" id="timeSlotsSection" style="display: none">
                  <h5>Select Time Slots:</h5>
                  <div
                    class="form-check form-check-inline"
                    id="selectSlots"
                  ></div>
                </div>
                <br />

                <!-- Submit Button-->
                <button
                  class="btn btn-primary text-uppercase"
                  id="submitButton"
                  type="submit"
                >
                  Update
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- Footer-->
    <%- include('layouts/footer') -%>
    <!-- JS-->
    <%- include('layouts/scripts') -%>
  </body>
</html>
